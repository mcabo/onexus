<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <reference id="serializerRef" interface="org.onexus.resource.api.IResourceSerializer"/>
    <reference id="authorizationRef" interface="org.onexus.resource.api.IAuthorizationManager"/>

    <service interface="org.onexus.resource.api.IResourceManager" ref="resourceManager" />
    <bean id="resourceManager" class="org.onexus.resource.manager.internal.ResourceManager" init-method="init" destroy-method="destroy">
        <property name="serializer" ref="serializerRef"/>
        <property name="authorizationManager" ref="authorizationRef"/>
        <property name="context" ref="blueprintBundleContext"/>
    </bean>

</blueprint>
