<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <cm:property-placeholder persistent-id="org.onexus.loader.anduril" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="andurilHome" value=""/>
            <cm:property name="executionDir" value=""/>
            <cm:property name="heapSize" value="400"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <service id="org.onexus.loader.anduril" interface="org.onexus.data.api.IDataLoader">
        <bean class="org.onexus.loader.anduril.internal.AndurilLoader" init-method="init">
            <property name="andurilHome" value="${andurilHome}"></property>
            <property name="executionDir" value="${executionDir}"></property>
            <property name="heapSize" value="${heapSize}"></property>
        </bean>
    </service>
</blueprint>