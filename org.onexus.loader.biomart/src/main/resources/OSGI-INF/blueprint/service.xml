<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <cm:property-placeholder persistent-id="org.onexus.loader.biomart" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="defaultMartService" value="http://www.biomart.org/biomart/martservice"/>
            <cm:property name="defaultVirtualSchema" value="default"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <service id="org.onexus.loader.biomart" interface="org.onexus.collection.api.IDataLoader">
        <bean class="org.onexus.loader.biomart.internal.TaskExecutor" init-method="init">
            <property name="defaultMartService" value="${defaultMartService}"></property>
            <property name="defaultVirtualSchema" value="${defaultVirtualSchema}"></property>
        </bean>
    </service>
</blueprint>