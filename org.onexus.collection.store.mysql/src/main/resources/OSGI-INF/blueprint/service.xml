<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

	<cm:property-placeholder persistent-id="org.onexus.collection.store.mysql" update-strategy="reload">
		<cm:default-properties>
			<cm:property name="uri" value="[http://localhost/demo/onx=workspaces/demo]" />
			<cm:property name="username" value="onexus" />
			<cm:property name="password" value="" />
			<cm:property name="status" value="disabled" />
		</cm:default-properties>
	</cm:property-placeholder>

	<reference id="resourceManagerRef" interface="org.onexus.core.IResourceManager" />
	
	<service id="org.onexus.collection.store.mysql" interface="org.onexus.core.ICollectionStore" >
		<service-properties>
			<entry key="status" value="${status}"/>
		</service-properties>
		
		<bean class="org.onexus.collection.store.mysql.CollectionStore" init-method="init">
			<property name="uri" value="${uri}" />
			<property name="username" value="${username}" />
			<property name="password" value="${password}" />
			<property name="status" value="${status}" />
			<property name="resourceManager" ref="resourceManagerRef" />
		</bean>
	</service>
</blueprint>