<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <cm:property-placeholder persistent-id="org.onexus.collection.store.mysql" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="server" value="localhost"/>
            <cm:property name="port" value="3306"/>
            <cm:property name="database" value="onexus"/>
            <cm:property name="username" value="onexus"/>
            <cm:property name="password" value="onexus"/>
            <cm:property name="status" value="disabled"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <reference id="resourceManagerRef" interface="org.onexus.core.IResourceManager"/>

    <service id="org.onexus.collection.store.mysql" interface="org.onexus.core.ICollectionStore">
        <service-properties>
            <entry key="status" value="${status}"/>
        </service-properties>

        <bean class="org.onexus.collection.store.mysql.MysqlCollectionStore" init-method="init">
            <property name="server" value="${server}"/>
            <property name="port" value="${port}"/>
            <property name="database" value="${database}"/>
            <property name="username" value="${username}"/>
            <property name="password" value="${password}"/>
            <property name="status" value="${status}"/>
            <property name="resourceManager" ref="resourceManagerRef"/>
        </bean>
    </service>
</blueprint>