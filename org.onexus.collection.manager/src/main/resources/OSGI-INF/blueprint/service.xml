<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <cm:property-placeholder persistent-id="org.onexus.collection.manager" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="maxThreads" value="2"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <reference id="resourceManagerRef" interface="org.onexus.core.IResourceManager"/>
    <reference id="collectionStoreRef" interface="org.onexus.core.ICollectionStore" filter="(status=enabled)"/>
    <reference id="taskManagerRef" interface="org.onexus.core.ITaskManager"/>

    <service id="org.onexus.collection.manager" interface="org.onexus.core.ICollectionManager">
        <bean class="org.onexus.collection.manager.internal.CollectionManager" init-method="init">
            <property name="maxThreads" value="${maxThreads}"/>
            <property name="resourceManager" ref="resourceManagerRef"/>
            <property name="collectionStore" ref="collectionStoreRef"/>
            <property name="taskManager" ref="taskManagerRef"/>
        </bean>
    </service>
</blueprint>