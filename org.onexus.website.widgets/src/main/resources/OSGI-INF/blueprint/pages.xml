<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
        >

    <!-- Pages -->
    <service interface="org.onexus.website.api.pages.IPageCreator" ref="browserPage"/>
    <bean id="browserPage" class="org.onexus.website.widgets.pages.browser.BrowserPageCreator">
        <property name="resourceRegister" ref="resourceRegister"/>
    </bean>

    <service interface="org.onexus.website.api.pages.IPageCreator" ref="htmlPage"/>
    <bean id="htmlPage" class="org.onexus.website.widgets.pages.html.HtmlPageCreator">
        <property name="resourceRegister" ref="resourceRegister"/>
    </bean>

    <service interface="org.onexus.website.api.pages.IPageCreator" ref="searchPage"/>
    <bean id="searchPage" class="org.onexus.website.widgets.pages.search.SearchPageCreator">
        <property name="resourceRegister" ref="resourceRegister"/>
    </bean>

    <service interface="org.onexus.website.api.pages.IPageCreator" ref="downloadsPage"/>
    <bean id="downloadsPage" class="org.onexus.website.widgets.pages.downloads.DownloadsPageCreator">
        <property name="resourceRegister" ref="resourceRegister"/>
    </bean>

</blueprint>