<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.onexus</groupId>
    <artifactId>onexus</artifactId>
    <version>0.2.0</version>

    <name>org.onexus</name>

    <description>Onexus</description>

    <properties>
        <wicket.version>1.5.5</wicket.version>
        <karaf.version>2.2.5</karaf.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <packaging>pom</packaging>

    <url>http://www.onexus.org</url>

    <organization>
        <name>Biomedical Genomics</name>
        <url>http://bg.upf.ed</url>
    </organization>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <connection>scm:svn:https://bg.upf.edu/svn/onexus/onexus/trunk</connection>
        <developerConnection>scm:svn:https://bg.upf.edu/svn/onexus/onexus/trunk</developerConnection>
        <url>https://bg.upf.edu/svn/onexus/onexus/trunk</url>
    </scm>

    <modules>
        <module>poms</module>
        <module>provision</module>
        <module>onexus-server</module>
        <module>org.onexus.core</module>
        <module>org.onexus.collection.store.mysql</module>
        <module>org.onexus.collection.manager</module>
        <module>org.onexus.task.manager</module>
        <module>org.onexus.loader.tsv</module>
        <module>org.onexus.resource.manager</module>
        <module>org.onexus.resource.serializer.xstream</module>
        <module>org.onexus.ui</module>
        <module>org.onexus.loader.biomart</module>
        <module>org.onexus.loader.anduril</module>
        <module>org.onexus.collection.store.h2sql</module>
        <module>onexus-resources</module>
        <module>org.onexus.source.manager</module>
        <module>onexus-archetypes/widget</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.2.2</version>
            </plugin>
            <plugin>
                <groupId>org.ops4j</groupId>
                <artifactId>maven-pax-plugin</artifactId>
                <version>1.5</version>
                <configuration>
                    <provision>
                        <param>--log=debug</param>
                        <param>--platform=felix</param>
                    </provision>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.3.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.mycila.maven-license-plugin</groupId>
                <artifactId>maven-license-plugin</artifactId>
                <version>1.9.0</version>
                <configuration>
                    <header>onexus-resources/src/main/resources/META-INF/LICENSE.txt</header>
                    <strictCheck>true</strictCheck>
                    <aggregate>true</aggregate>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>2.1.2</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-remote-resources-plugin</artifactId>
                <version>1.2.1</version>
                <executions>
                    <execution>
                        <id>process-remote-resources</id>
                        <goals>
                            <goal>process</goal>
                        </goals>
                        <configuration>
                            <resourceBundles>
                                <resourceBundle>org.onexus:onexus-resources:${project.version}</resourceBundle>
                            </resourceBundles>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-archetype-plugin</artifactId>
                    <version>2.2</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>


    <dependencyManagement>
        <dependencies>
            <!-- XStream dependencies -->
            <dependency>
                <groupId>com.thoughtworks.xstream</groupId>
                <artifactId>com.springsource.com.thoughtworks.xstream</artifactId>
                <version>1.3.1</version>
            </dependency>
            <dependency>
                <groupId>net.sourceforge.cglib</groupId>
                <artifactId>com.springsource.net.sf.cglib</artifactId>
                <version>2.2.0</version>
            </dependency>
            <dependency>
                <groupId>javax.xml.stream</groupId>
                <artifactId>com.springsource.javax.xml.stream</artifactId>
                <version>1.0.1</version>
            </dependency>
            <dependency>
                <groupId>nu.xom</groupId>
                <artifactId>com.springsource.nu.xom</artifactId>
                <version>1.1.0</version>
            </dependency>
            <dependency>
                <groupId>org.jdom</groupId>
                <artifactId>com.springsource.org.jdom</artifactId>
                <version>1.1.0</version>
            </dependency>
            <dependency>
                <groupId>org.dom4j</groupId>
                <artifactId>com.springsource.org.dom4j</artifactId>
                <version>1.6.1</version>
            </dependency>
            <dependency>
                <groupId>org.joda</groupId>
                <artifactId>com.springsource.org.joda.time</artifactId>
                <version>1.6.0</version>
            </dependency>

            <!-- Logging -->
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-api</artifactId>
                <version>1.6.1</version>
            </dependency>

            <!-- ONEXUS -->
            <dependency>
                <groupId>org.onexus</groupId>
                <artifactId>org.onexus.core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.onexus</groupId>
                <artifactId>org.onexus.resource.serializer.xstream</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.onexus</groupId>
                <artifactId>org.onexus.ui</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.onexus</groupId>
                <artifactId>org.onexus.collection.store.mysql</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.onexus</groupId>
                <artifactId>org.onexus.collection.store.h2sql</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.onexus</groupId>
                <artifactId>org.onexus.collection.manager</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.onexus</groupId>
                <artifactId>org.onexus.task.manager</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.onexus</groupId>
                <artifactId>org.onexus.resource.manager</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.onexus</groupId>
                <artifactId>org.onexus.source.manager</artifactId>
                <version>${project.version}</version>
            </dependency>


            <!-- ONEXUS TaskExecutors -->
            <dependency>
                <groupId>org.onexus</groupId>
                <artifactId>org.onexus.loader.tsv</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>org.onexus</groupId>
                <artifactId>org.onexus.loader.biomart</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.onexus</groupId>
                <artifactId>org.onexus.loader.anduril</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- ONEXUS dependencies -->
            <dependency>
                <groupId>fi.helsinki.ltdk.csbl</groupId>
                <artifactId>anduril</artifactId>
                <version>1.2.5</version>
            </dependency>
            <!-- WICKET -->
            <dependency>
                <groupId>org.wicketstuff</groupId>
                <artifactId>wicketstuff-bundle</artifactId>
